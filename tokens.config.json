{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "color/css",
        "toRem/pxToRem",
        "toPX/appendPX",
        "toRem/appendRem"
      ],
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/map-deep"
      }]
    },
    "css": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "color/css",
        "toRem/pxToRem",
        "toPX/appendPX",
        "toRem/appendRem"
      ],
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [{
        "destination": "root.css",
        "format": "css/variables",
        "filter": "excludeTokens"
      }]
    }
  }
}
